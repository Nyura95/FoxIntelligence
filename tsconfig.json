{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "rootDir": "src",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "reflect-metadata"
    ],
  },
  "exclude": [
    "__tests__/"
  ],
  "include": [
    "src/**/*.ts"
  ],
}